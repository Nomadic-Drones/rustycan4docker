{
    "description": "Network driver to construct and manage CAN bus network for docker.", 
    "documentation": "https://github.com/Nomadic-Drones/rustycan4docker",
    "entrypoint": ["/usr/local/bin/rustycan4docker"],
    "network": {
	"type": "host"
    },
    "interface" : {
	"types": ["docker.networkdriver/1.0"],
	"socket": "rustyvxcan.sock"
    },
    "propagatedMount": "/var/lib/docker/network/files",
    "mounts": [
        {
            "source": "/var/lib/docker/network/files",
            "destination": "/var/lib/docker/network/files",
            "type": "bind",
            "options": ["rbind", "rw"]
        }
    ],
    "linux": {
	"capabilities": ["CAP_NET_ADMIN"]
    }

}
